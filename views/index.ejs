
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= brand.name %> â€” Coming Soon</title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- GSAP -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/a2e0e6ad55.js" crossorigin="anonymous"></script>

  <style>
    body {
      background: radial-gradient(circle at top left, rgba(243,156,18,.08), transparent),
                  radial-gradient(circle at bottom right, rgba(53,118,204,.08), transparent),
                  #0B1F33;
      color: #fff;
    }
    .glass {
      backdrop-filter: blur(12px);
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
  </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center text-center">

  <!-- Logo -->
  <img src="https://i.ibb.co/qLFQw2ZH/logo.png" alt="logo" class="w-20 mb-6 animate-bounce">

  <!-- Coming Soon Message -->
  <div class="mb-4">
    <span class="text-2xl md:text-3xl font-semibold text-yellow-400 drop-shadow-lg">Coming Soon</span>
  </div>

  <!-- Heading -->
  <h1 class="text-4xl md:text-6xl font-bold mb-4"><%= brand.name %></h1>
  <p class="text-lg text-gray-300 mb-8"><%= brand.tagline %></p>

  <!-- Countdown -->
  <div id="countdown" class="flex gap-6 text-2xl font-mono mb-8"></div>

  <!-- Notify form -->
  <div id="msg" class="mt-3 text-sm"></div>

  <!-- Footer -->
  <div class="mt-12 flex gap-6 text-xl">
    <a href="#" class="hover:text-yellow-400"><i class="fab fa-linkedin"></i></a>
    <a href="#" class="hover:text-yellow-400"><i class="fab fa-github"></i></a>
    <a href="mailto:hello@indovate.tech" class="hover:text-yellow-400"><i class="fas fa-envelope"></i></a>
  </div>

  <script>
    // Countdown
    const launch = new Date();
    launch.setDate(launch.getDate() + 45);
    function updateCountdown() {
      const now = new Date();
      const diff = launch - now;
      if (diff <= 0) return document.getElementById('countdown').innerText = "We are live!";
      const d = Math.floor(diff / (1000*60*60*24));
      const h = Math.floor(diff / (1000*60*60)) % 24;
      const m = Math.floor(diff / (1000*60)) % 60;
      const s = Math.floor(diff / 1000) % 60;
      document.getElementById('countdown').innerText =
        `${d}d ${h}h ${m}m ${s}s`;
    }
    setInterval(updateCountdown, 1000);
    updateCountdown();

    // Notify form

    // GSAP animation
    gsap.from("h1", {y: -50, opacity: 0, duration: 1});
    gsap.from("p", {y: 20, opacity: 0, delay: 0.5});
    gsap.from("#countdown", {scale: 0.5, opacity: 0, delay: 1});
  </script>
</body>
</html>
